<!DOCTYPE html>
<html>
  <head>
    <title>Settings</title>

    <link rel="stylesheet" href="/resources/bootstrap" />
    <link rel="stylesheet" href="/resources/style" />

    <link rel="stylesheet" href="css/bootstrap.min.css" />
    <link rel="stylesheet" href="css/style.css" />
  </head>
  <body>
    <div
      class="form-check allign-text-center"
      style="padding-bottom: 50px; padding-top: 20px"
    >
      <h1>Settings</h1>
    </div>

	<%roles = ['Assassin','Mordred','Morgana','Oberon','Percival','Arnold'];%>
    <%for(let i = 0; i < roles.length; i++){ %>
    <form method="POST">
      <div class="form-check allign-text-center">
        <input
          class="form-check-input"
          type="checkbox"
		  name="<%=roles[i].toLowerCase()%>"
          value="true"
          id="flexCheckDefault"
          <%if(characters[i]){%>

        checked="checked" <%}%>

        <label class="form-check-label" for="flexCheckDefault">
          <%=roles[i]%>
        </label>
      </div>
      <%}%>

      <div class="row-buttons-mine allign-text-center" style="margin-top: 50px">
        <button
          type="submit"
          class="btn btn-success"
          href="/join/<%=lobbyCode%>"
        >
          Select
        </button>
      </div>
    </form>
    <div class="allign-text-center" style="margin-top: 10px">
      <a href="/join/<%=lobbyCode%>" class="btn btn-secondary">Cancel</a>
    </div>
  </body>
</html>
